@model User

@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Login" method="POST" class="w-50 mx-auto border p-3 rounded shadow">
    <div class="form-group">
        @* asp-for="PropertyNameFromModel" *@
        <label asp-for="Username"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="Username" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="AccountType"></label>
        <span asp-validation-for="AccountType" class="text-danger"></span>
        <select asp-for="AccountType" class="form-control">
            <option value="Admin">Admin</option>
            <option value="User">User</option>
            <option value="Client">Client</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        <input asp-for="PasswordConfirm" class="form-control">
    </div>

    <button class="btn btn-outline-primary">Submit</button>
</form>
